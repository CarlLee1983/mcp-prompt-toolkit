{
  "name": "@carllee1983/prompt-toolkit",
  "version": "1.0.0",
  "description": "Prompt repository governance toolkit for MCP",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "prompt-toolkit": "./dist/cli/index.js",
    "prompt-toolkit-cli": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts && tsup src/cli/index.ts --dts --format cjs --outDir dist/cli",
    "dev": "tsup src/index.ts --dts --watch",
    "cli": "tsx src/cli/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "prepare": "husky",
    "version:patch": "npm version patch -m \"chore: bump version to %s\"",
    "version:minor": "npm version minor -m \"chore: bump version to %s\"",
    "version:major": "npm version major -m \"chore: bump version to %s\""
  },
  "keywords": [
    "mcp",
    "prompt",
    "toolkit",
    "ai",
    "governance",
    "validation",
    "yaml",
    "schema",
    "cli",
    "typescript",
    "model-context-protocol"
  ],
  "author": "CarlLee1983",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/CarlLee1983/mcp-prompt-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/CarlLee1983/mcp-prompt-toolkit/issues"
  },
  "homepage": "https://github.com/CarlLee1983/mcp-prompt-toolkit#readme",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "glob": "^13.0.0",
    "js-yaml": "^4.1.0",
    "ora": "^9.0.0",
    "zod": "^4.1.13"
  }
}
